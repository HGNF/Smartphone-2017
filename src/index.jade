    .animasi-teks {
      font-family: 'StarmiX', sans-serif;
      font-size: 50px;
      width: 100%;
      letter-spacing: .3em;
      text-transform: capitalize;
      white-space:nowrap;
      overflow:hidden;
      -webkit-animation: typing 3s steps(70, end);
      animation: animasi-ketik 2s steps(70, end);
    }

    .animasi-teks:hover {
      font-family: 'StarmiX', sans-serif;
      font-size: 39px;
      text-transform: uppercase;
      width:100%;
      animation: tada 3s ease infinite alternate;
      font-weight:600;
    }

    .tada {
      font-family: 'StarmiX', sans-serif;
      font-size: 35px;
      width:100%;
      animation: tada .3s ease infinite alternate;
      font-weight:600;
    } 

    }
    @keyframes tada {
      from {
        transform: scale3d(1, 1, 1);
      }

      10%, 20% {
        transform: scale3d(.9, .9, .9) rotate3d(0, 0, 1, -3deg);
      }

      30%, 50%, 70%, 90% {
        transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, 3deg);
      }

      40%, 60%, 80% {
        transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, -3deg);
      }

      to {
        transform: scale3d(1, 1, 1);
      }
    }
    .jackInTheBox {
        font-family: 'StarmiX', sans-serif;
        font-size: 35px;
        width:100%;
        animation: jackInTheBox 5s ease infinite alternate;
        font-weight:600;
      }

      @keyframes jackInTheBox {
        from {
          opacity: 0;
          transform: scale(0.1) rotate(30deg);
          transform-origin: center bottom;
        }

        50% {
          transform: rotate(-10deg);
        }

        70% {
          transform: rotate(3deg);
        }

        to {
          opacity: 1;
          transform: scale(1);
        }
      }

    .animasi-teks:nth-child(2) {animation-delay: .1s;}
    .animasi-teks:nth-child(3) {animation-delay: .2s;}
    .animasi-teks:nth-child(4) {animation-delay: .3s;}
    .animasi-teks:nth-child(5) {animation-delay: .4s;}

    @keyframes bounce {
      100% {top:-20px;
